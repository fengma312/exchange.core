{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-Service",
            "program": "${workspaceFolder}/Com.Service/bin/Debug/net6.0/Com.Service.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Com.Service",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                // "DOTNET_ENVIRONMENT": "Development"
                "DOTNET_ENVIRONMENT": "Staging"
                // "DOTNET_ENVIRONMENT": "Production"
            }
        },
        {
            "name": "Gateway",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-Gateway",
            "program": "${workspaceFolder}/Com.Gateway/bin/Debug/net6.0/Com.Gateway.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Com.Gateway",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
                // "ASPNETCORE_ENVIRONMENT": "Staging"
                // "ASPNETCORE_ENVIRONMENT": "Production"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-Api",
            "program": "${workspaceFolder}/Com.Api/bin/Debug/net6.0/Com.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Com.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
                // "ASPNETCORE_ENVIRONMENT": "Staging"
                // "ASPNETCORE_ENVIRONMENT": "Production"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Admin",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-Admin",
            "program": "${workspaceFolder}/Com.Api.Admin/bin/Debug/net6.0/Com.Api.Admin.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Com.Api.Admin",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                // "ASPNETCORE_ENVIRONMENT": "Development"
                "ASPNETCORE_ENVIRONMENT": "Staging"
                // "ASPNETCORE_ENVIRONMENT": "Production"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}